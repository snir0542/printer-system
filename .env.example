# Server Configuration
PORT=3001
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:5000/api

# Printer Configuration
# On Windows, set PRINTER_NAME to exactly match the installed printer name
# You can call GET /printers to list available printers
PRINTER_NAME=Default_Printer
PRINT_QUALITY=high
PRINT_SIZE=4x6

# Set to 'simulate' to avoid sending real print jobs (useful for testing)
PRINTER_TEST_MODE=simulate

# Polling Configuration
POLL_INTERVAL_MS=5000
BATCH_SIZE=5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/printer.log
